apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  name: fb-alerting-services-<%= env_string %>
  namespace: formbuilder-services-<%= env_string %>
  labels:
    prometheus: cloud-platform
spec:
  groups:
  - name: forms
    rules:
    - alert: KubePodNotReady
      annotations:
        message: Pod {{ $labels.namespace }}/{{ $labels.pod }} has been in a non-ready state for longer than 10 minutes
        runbook_url: https://github.com/kubernetes-monitoring/kubernetes-mixin/tree/master/runbook.md#alert-name-kubepodnotready
      expr: sum by (namespace, pod) (kube_pod_status_phase{job="kube-state-metrics", phase!~"Running", namespace="formbuilder-services-<%= env_string %>"}) > 0
      for: 10m
      labels:
        severity: <%= severity %>

    - alert: KubePodCrashLooping
      annotations:
        message: Pod {{ $labels.namespace }}/{{ $labels.pod }} ({{ $labels.container }}) is restarting excessively
        runbook_url: https://github.com/kubernetes-monitoring/kubernetes-mixin/tree/master/runbook.md#alert-name-kubepodcrashlooping
      expr: rate(kube_pod_container_status_restarts_total{job="kube-state-metrics", namespace="formbuilder-services-<%= env_string %>"}[10m]) > 0
      for: 5m
      labels:
        severity: <%= severity %>

    - alert: DeploymentReplicasMismatch
      annotations:
        message: Deployment `{{ $labels.deployment }}` has not matched the expected number of replicas for more than 30m.
      expr: >-
        kube_deployment_spec_replicas{job="kube-state-metrics", namespace="formbuilder-services-<%= env_string %>"}
        != kube_deployment_status_replicas_available{job="kube-state-metrics"}
      for: 30m
      labels:
        severity: <%= severity %>

    - alert: KubeNamespaceQuotaNearing
      annotations:
        message: Namespace {{ $labels.namespace }} is using {{ printf "%0.0f" $value }}% of its {{ $labels.resource }} quota.
        runbook_url: https://github.com/kubernetes-monitoring/kubernetes-mixin/tree/master/runbook.md#alert-name-kubequotaexceeded
      expr: |-
        100 * kube_resourcequota{job="kube-state-metrics", type="used", namespace="formbuilder-services-<%= env_string %>"}
          / ignoring(instance, job, type)
        (kube_resourcequota{job="kube-state-metrics", type="hard", namespace="formbuilder-services-<%= env_string %>"} > 0)
          > 90
      for: 5m
      labels:
        severity: <%= severity %>

    - alert: SlowResponses
      annotations:
        message: ingress {{ $labels.ingress }} in {{ $labels.exported_namespace }} is serving slow responses over 6 seconds
        runbook_url: https://example.com/
      expr: |-
        avg(rate(nginx_ingress_controller_request_duration_seconds_sum{exported_namespace = "formbuilder-services-<%= env_string %>"}[5m])
        /
        rate(nginx_ingress_controller_request_duration_seconds_count{exported_namespace = "formbuilder-services-<%= env_string %>"}[5m]) > 0)
        by (ingress, exported_namespace) > 6
      for: 5m
      labels:
        severity: <%= severity %>

    - alert: ClientErrorResponses
      annotations:
        message: ingress {{ $labels.ingress }} in {{ $labels.exported_namespace }} is serving 4XX responses
        runbook_url: https://kibana.cloud-platform.service.justice.gov.uk/_plugin/kibana/app/discover#/?_g=(filters:!(),refreshInterval:(pause:!t,value:0),time:(from:now-8h,to:now))&_a=(columns:!(log_processed.status,log_processed.request_path),filters:!(('$state':(store:appState),meta:(alias:!n,disabled:!f,index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',key:log_processed.kubernetes_namespace,negate:!f,params:(query:{{ $labels.exported_namespace }}),type:phrase),query:(match_phrase:(log_processed.kubernetes_namespace:{{ $labels.exported_namespace }}))),('$state':(store:appState),meta:(alias:!n,disabled:!f,index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',key:log_processed.status,negate:!f,params:(gte:400,lt:499),type:range),range:(log_processed.status:(gte:400,lt:499))),('$state':(store:appState),meta:(alias:!n,disabled:!f,index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',key:log_processed.kubernetes_ingress_name,negate:!f,params:(query:{{ $labels.ingress }}),type:phrase),query:(match_phrase:(log_processed.kubernetes_ingress_name:{{ $labels.ingress }})))),index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',interval:auto,query:(language:lucene,query:''),sort:!())
      expr: |-
        sum(rate(nginx_ingress_controller_requests{exported_namespace="formbuilder-services-<%= env_string %>", status=~"400|403|404|499"}[1m]) * 60 > 1)
        by (ingress, exported_namespace)
      for: 1m
      labels:
        severity: <%= four_hundreds_severity %>

    - alert: ServerErrorResponses
      annotations:
        message: ingress {{ $labels.ingress }} in {{ $labels.exported_namespace }} is serving 5XX responses
        runbook_url: https://kibana.cloud-platform.service.justice.gov.uk/_plugin/kibana/app/discover#/?_g=(filters:!(),refreshInterval:(pause:!t,value:0),time:(from:now-8h,to:now))&_a=(columns:!(log_processed.status,log_processed.request_path),filters:!(('$state':(store:appState),meta:(alias:!n,disabled:!f,index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',key:log_processed.kubernetes_namespace,negate:!f,params:(query:{{ $labels.exported_namespace }}),type:phrase),query:(match_phrase:(log_processed.kubernetes_namespace:{{ $labels.exported_namespace }}))),('$state':(store:appState),meta:(alias:!n,disabled:!f,index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',key:log_processed.status,negate:!f,params:(gte:500,lt:599),type:range),range:(log_processed.status:(gte:500,lt:599))),('$state':(store:appState),meta:(alias:!n,disabled:!f,index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',key:log_processed.kubernetes_ingress_name,negate:!f,params:(query:{{ $labels.ingress }}),type:phrase),query:(match_phrase:(log_processed.kubernetes_ingress_name:{{ $labels.ingress }})))),index:'8a728bc0-00eb-11ec-9062-27aa363b66a2',interval:auto,query:(language:lucene,query:''),sort:!())
      expr: |-
        sum(rate(nginx_ingress_controller_requests{exported_namespace="formbuilder-services-<%= env_string %>", status=~"5.."}[1m]) * 60 > 0)
        by (ingress, exported_namespace)
      for: 1m
      labels:
        severity: <%= severity %>
